{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Security Alert Batch Schema",
  "description": "Schema for batch AI-generated security alerts",
  "required": ["alerts"],
  "properties": {
    "alerts": {
      "type": "array",
      "description": "Array of security alerts",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "type": "object",
        "required": [
          "@timestamp",
          "kibana.alert.uuid",
          "kibana.alert.rule.name",
          "kibana.alert.severity",
          "kibana.alert.risk_score",
          "host.name",
          "user.name",
          "event.kind",
          "event.category"
        ],
        "properties": {
          "@timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Event timestamp in ISO 8601 format"
          },
          "kibana.alert.uuid": {
            "type": "string",
            "format": "uuid",
            "description": "Unique alert identifier"
          },
          "kibana.alert.rule.name": {
            "type": "string",
            "maxLength": 200,
            "description": "Name of the detection rule"
          },
          "kibana.alert.rule.description": {
            "type": "string",
            "maxLength": 500,
            "description": "Description of what the rule detects"
          },
          "kibana.alert.severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"],
            "description": "Alert severity level"
          },
          "kibana.alert.risk_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Risk score from 0-100"
          },
          "kibana.alert.reason": {
            "type": "string",
            "maxLength": 300,
            "description": "Human readable reason for the alert"
          },
          "host.name": {
            "type": "string",
            "maxLength": 100,
            "description": "Host name where the event occurred"
          },
          "host.ip": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "ipv4"
            },
            "maxItems": 3,
            "description": "Host IP addresses"
          },
          "user.name": {
            "type": "string",
            "maxLength": 100,
            "description": "Username associated with the event"
          },
          "event.kind": {
            "type": "string",
            "enum": ["signal", "event", "alert"],
            "description": "Event kind"
          },
          "event.category": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["authentication", "network", "process", "file", "registry", "security", "malware"]
            },
            "maxItems": 3,
            "description": "Event categories"
          },
          "event.action": {
            "type": "string",
            "maxLength": 100,
            "description": "Specific action taken"
          },
          "source.ip": {
            "type": "string",
            "format": "ipv4",
            "description": "Source IP address"
          },
          "destination.ip": {
            "type": "string",
            "format": "ipv4", 
            "description": "Destination IP address"
          },
          "process.name": {
            "type": "string",
            "maxLength": 100,
            "description": "Process name"
          },
          "process.command_line": {
            "type": "string",
            "maxLength": 300,
            "description": "Full command line (shortened for batch)"
          },
          "file.name": {
            "type": "string",
            "maxLength": 100,
            "description": "File name"
          },
          "file.path": {
            "type": "string",
            "maxLength": 300,
            "description": "Full file path (shortened for batch)"
          },
          "threat.technique.id": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^T[0-9]{4}(\\.[0-9]{3})?$"
            },
            "maxItems": 2,
            "description": "MITRE ATT&CK technique IDs"
          },
          "threat.technique.name": {
            "type": "array",
            "items": {
              "type": "string",
              "maxLength": 100
            },
            "maxItems": 2,
            "description": "MITRE ATT&CK technique names"
          },
          "threat.tactic.id": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^TA[0-9]{4}$"
            },
            "maxItems": 2,
            "description": "MITRE ATT&CK tactic IDs"
          },
          "threat.tactic.name": {
            "type": "array",
            "items": {
              "type": "string",
              "maxLength": 50
            },
            "maxItems": 2,
            "description": "MITRE ATT&CK tactic names"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}